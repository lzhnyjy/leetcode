<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leetcode.mapper.LabelsolutionDao">

    <resultMap type="com.leetcode.entity.Labelsolution" id="LabelsolutionMap">
        <result property="labelid" column="labelId" jdbcType="INTEGER"/>
        <result property="solutionid" column="solutionId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="LabelsolutionMap">
        select
          labelId, solutionId
        from leetcode.labelsolution
        where labelId = #{labelid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="LabelsolutionMap">
        select
          labelId, solutionId
        from leetcode.labelsolution
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="LabelsolutionMap">
        select
        labelId, solutionId
        from leetcode.labelsolution
        <where>
            <if test="labelid != null">
                and labelId = #{labelid}
            </if>
            <if test="solutionid != null">
                and solutionId = #{solutionid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.labelsolution()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.labelsolution()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="labelid" useGeneratedKeys="true">
        insert into leetcode.labelsolution()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update leetcode.labelsolution
        <set>
        </set>
        where labelId = #{labelid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from leetcode.labelsolution where labelId = #{labelid}
    </delete>

</mapper>

