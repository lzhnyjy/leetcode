<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leetcode.mapper.SolutionimageDao">

    <resultMap type="com.leetcode.entity.Solutionimage" id="SolutionimageMap">
        <result property="solutionimageid" column="solutionImageId" jdbcType="INTEGER"/>
        <result property="solutionimageurl" column="solutionImageUrl" jdbcType="VARCHAR"/>
        <result property="solutionid" column="solutionId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SolutionimageMap">
        select
          solutionImageId, solutionImageUrl, solutionId
        from leetcode.solutionimage
        where solutionImageId = #{solutionimageid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SolutionimageMap">
        select
          solutionImageId, solutionImageUrl, solutionId
        from leetcode.solutionimage
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SolutionimageMap">
        select
        solutionImageId, solutionImageUrl, solutionId
        from leetcode.solutionimage
        <where>
            <if test="solutionimageid != null">
                and solutionImageId = #{solutionimageid}
            </if>
            <if test="solutionimageurl != null and solutionimageurl != ''">
                and solutionImageUrl = #{solutionimageurl}
            </if>
            <if test="solutionid != null">
                and solutionId = #{solutionid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="solutionimageid" useGeneratedKeys="true">
        insert into leetcode.solutionimage(solutionImageUrl, solutionId)
        values (#{solutionimageurl}, #{solutionid})
    </insert>

    <insert id="insertBatch" keyProperty="solutionimageid" useGeneratedKeys="true">
        insert into leetcode.solutionimage(solutionImageUrl, solutionId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.solutionimageurl}, #{entity.solutionid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="solutionimageid" useGeneratedKeys="true">
        insert into leetcode.solutionimage(solutionImageUrl, solutionId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.solutionimageurl}, #{entity.solutionid})
        </foreach>
        on duplicate key update
        solutionImageUrl = values(solutionImageUrl) , solutionId = values(solutionId)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update leetcode.solutionimage
        <set>
            <if test="solutionimageurl != null and solutionimageurl != ''">
                solutionImageUrl = #{solutionimageurl},
            </if>
            <if test="solutionid != null">
                solutionId = #{solutionid},
            </if>
        </set>
        where solutionImageId = #{solutionimageid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from leetcode.solutionimage where solutionImageId = #{solutionimageid}
    </delete>

</mapper>

