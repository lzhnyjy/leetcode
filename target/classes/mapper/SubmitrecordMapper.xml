<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leetcode.mapper.SubmitrecordMapper">

    <select id="getByUserId" resultMap="submitrecordMap">
        select s.*, p.problemName as problemName
        from submitrecord s
                 left join problem p on p.problemId = s.problemId
        where userId = #{userId}
    </select>

    <resultMap id="submitrecordMap" type="com.leetcode.vo.Submitrecord">
        <id column="userId" property="userId"/>
        <result column="problemId" property="problemId"/>
        <result column="submitDateTime" property="submitDateTime"/>
        <result column="submitResult" property="submitResult"/>
        <result column="runResult" property="runResult"/>
        <result column="language" property="language"/>
        <result column="problemName" property="problemName"/>
    </resultMap>

</mapper>